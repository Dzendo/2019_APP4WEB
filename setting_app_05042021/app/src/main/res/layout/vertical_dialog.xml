<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
                android:id="@+id/VertView"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="ENTER http"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textAlignment="center"/>


        <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textUri"
                android:focusable="true"
                android:ems="10"
                android:id="@+id/VerteditText"
                android:imeOptions="actionDone"
                android:layout_weight="1"
                android:backgroundTint="#0BD513"
                android:background="#4CAF50"
                android:drawableLeft="@color/colorPrimary"
                android:textAlignment="center"/>
             <requestFocus />

    </LinearLayout>

    <TextView
            android:id="@+id/AnswerVertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Пока ничего не введено"
            android:autoLink="web"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="visible"
            tools:visibility="visible"
            android:background="#F8F8F7"/>

</LinearLayout>